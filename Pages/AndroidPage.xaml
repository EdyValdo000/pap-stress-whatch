<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:grafico="clr-namespace:pap.Graphics"
             x:Class="pap.Pages.AndroidPage"
             BackgroundColor="#121212">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="20" Padding="20">

            <!-- Barra Superior (AppBar) -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                <Label Text="Stress Whasch" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       VerticalOptions="Center"/>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Image Source="settings_icon.png" 
                           WidthRequest="24" 
                           HeightRequest="24" 
                           VerticalOptions="Center"/>
                    <Image Source="more_icon.png" 
                           WidthRequest="24" 
                           HeightRequest="24" 
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Seção de Título -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*" VerticalOptions="Center">
                <Image Source="vital_signs_icon.png" 
                       WidthRequest="24" 
                       HeightRequest="24" 
                       VerticalOptions="Center"/>
                <Label Text="Vital Signs" 
                       Grid.Column="1" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       Margin="10,0,0,0" 
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Grade de Informações (Grid com 2 colunas e 2 linhas) -->
            <Grid Grid.Row="2" RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" RowSpacing="20" ColumnSpacing="20">

                <!-- Primeiro Card (Frequência Cardíaca) -->
                <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="15">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                        <Image Source="heart_icon.png" 
                               Grid.Row="0" Grid.Column="0" 
                               WidthRequest="24" 
                               HeightRequest="24" 
                               VerticalOptions="Center"/>
                        <Label Text="72" 
                               Grid.Row="0" Grid.Column="1" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               Margin="10,0,0,0" 
                               VerticalOptions="Center"/>
                        <Label Text="BPM" 
                               Grid.Row="1" Grid.Column="1" 
                               FontSize="14" 
                               TextColor="White" 
                               Margin="10,0,0,0" 
                               VerticalOptions="Center"/>
                    </Grid>
                    
                </Frame>

                <!-- Segundo Card (GSR - Condutividade da Pele) -->
                <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="15" Grid.Column="1">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                        <Image Source="gsr_icon.png" 
                               Grid.Row="0" Grid.Column="0" 
                               WidthRequest="24" 
                               HeightRequest="24" 
                               VerticalOptions="Center"/>
                        <Label Text="0.5" 
                               Grid.Row="0" Grid.Column="1" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               Margin="10,0,0,0" 
                               VerticalOptions="Center"/>
                        <Label Text="µS" 
                               Grid.Row="1" Grid.Column="1" 
                               FontSize="14" 
                               TextColor="White" 
                               Margin="10,0,0,0" 
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Terceiro Card (Oxigenação) -->
                <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="15" Grid.Row="1">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                        <Image Source="oxygen_icon.png" 
                               Grid.Row="0" Grid.Column="0" 
                               WidthRequest="24" 
                               HeightRequest="24" 
                               VerticalOptions="Center"/>
                        <Label Text="98%" 
                               Grid.Row="0" Grid.Column="1" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               Margin="10,0,0,0" 
                               VerticalOptions="Center"/>
                        <Label Text="SpO2" 
                               Grid.Row="1" Grid.Column="1" 
                               FontSize="14" 
                               TextColor="White" 
                               Margin="10,0,0,0" 
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Quarto Card (Nível de Stress) -->
                <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="15" Grid.Row="1" Grid.Column="1">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                        <Image Source="stress_icon.png" 
                               Grid.Row="0" Grid.Column="0" 
                               WidthRequest="24" 
                               HeightRequest="24" 
                               VerticalOptions="Center"/>
                        <Label Text="45" 
                               Grid.Row="0" Grid.Column="1" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               Margin="10,0,0,0" 
                               VerticalOptions="Center"/>
                        <Label Text="Stress Level" 
                               Grid.Row="1" Grid.Column="1" 
                               FontSize="14" 
                               TextColor="White" 
                               Margin="10,0,0,0" 
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>
            </Grid>

            <!-- Gráfico de Linha (Prevalência) -->
            <Frame Grid.Row="3" BackgroundColor="#1E1E1E" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Prevalence" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <GraphicsView x:Name="gsrGraphicsView" HeightRequest="200" WidthRequest="200">
                        <GraphicsView.Drawable>
                            <grafico:GsrWave/>
                        </GraphicsView.Drawable>
                    </GraphicsView>
                </VerticalStackLayout>
            </Frame>

            <!-- Opções de Visualização (Diária/Semanal) -->
            <Grid Grid.Row="4" ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Daily" 
                        BackgroundColor="#333333" 
                        TextColor="White" 
                        CornerRadius="5"/>
                <Button Text="Weekly" 
                        Grid.Column="1" 
                        BackgroundColor="#333333" 
                        TextColor="White" 
                        CornerRadius="5"/>
            </Grid>

        </Grid>
    </ScrollView>

</ContentPage>