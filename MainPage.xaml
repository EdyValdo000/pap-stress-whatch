<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:pap.Model"
    x:DataType="local:User"
    x:Class="pap.MainPage"
    BackgroundColor="#1A202C">

    <!-- Container principal que agrupa os layouts específicos -->
    <Grid>
        <!-- Layout específico para Android -->
        <Grid x:Name="AndroidLayout"
          IsVisible="{OnPlatform Android=true, WinUI=false}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Menu Superior (Horizontal) -->
            <StackLayout Grid.Row="0" Orientation="Horizontal"
                   Padding="10" BackgroundColor="#2D3748"
                   Spacing="10" HorizontalOptions="FillAndExpand">
                <!-- Todos os botões chamam o mesmo evento, passando um parâmetro diferente -->
                <Button Text="📊 Monitoramento"
                BackgroundColor="#4A5568"
                TextColor="White"
                FontSize="14"
                CornerRadius="15"
                HeightRequest="40"
                HorizontalOptions="FillAndExpand"
                Clicked="CommonButtonClicked"
                CommandParameter="monitoring">
                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                            <Setter Property="Scale" Value="0.95"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>
                <Button Text="⚙️ Configurações"
                BackgroundColor="#4A5568"
                TextColor="White"
                FontSize="14"
                CornerRadius="15"
                HeightRequest="40"
                HorizontalOptions="FillAndExpand"
                Clicked="CommonButtonClicked"
                CommandParameter="settings">
                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                            <Setter Property="Scale" Value="0.95"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>
                <Button Text="ℹ️ Sobre"
                BackgroundColor="#4A5568"
                TextColor="White"
                FontSize="14"
                CornerRadius="15"
                HeightRequest="40"
                HorizontalOptions="FillAndExpand"
                Clicked="CommonButtonClicked"
                CommandParameter="about">
                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                            <Setter Property="Scale" Value="0.95"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>
            </StackLayout>

            <!-- Conteúdo Principal para Android -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="20" Spacing="15">
                    <!-- Monitoramento -->
                    <StackLayout x:Name="MonitoringLayout" IsVisible="True" Spacing="20">
                        <Label Text="📊 Monitoramento da Saúde"
                   FontSize="24"
                   TextColor="#E2E8F0"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                            <!-- Frequência Cardíaca -->
                            <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="15" Margin="0,5">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="❤️ Frequência Cardíaca"
                         FontSize="16"
                         TextColor="#CBD5E0"/>
                                    <Label x:Name="HeartRateLabel"
                         Text="-- bpm"
                         FontSize="20"
                         TextColor="#38B2AC"
                         FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>
                            <!-- Temperatura Corporal -->
                            <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="15" Margin="0,5">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="🌡️ Temperatura Corporal"
                         FontSize="16"
                         TextColor="#CBD5E0"/>
                                    <Label x:Name="TemperatureLabel"
                         Text="--°C"
                         FontSize="20"
                         TextColor="#F56565"
                         FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>
                            <!-- Nível de Estresse ocupa a largura total -->
                            <Frame Grid.ColumnSpan="2" BackgroundColor="#2D3748" CornerRadius="15" Padding="15" Margin="0,5">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="🧠 Nível de Estresse"
                         FontSize="16"
                         TextColor="#CBD5E0"/>
                                    <Label x:Name="GSRLabel"
                         Text="--"
                         FontSize="20"
                         TextColor="#48BB78"
                         FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </StackLayout>

                    <!-- Configurações -->
                    <StackLayout x:Name="SettingsLayout" IsVisible="False" Spacing="20">
                        <Label Text="⚙️ Configurações"
                   FontSize="24"
                   TextColor="#E2E8F0"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
                        <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="10">
                            <Entry Placeholder="Endereço IP"
                     FontSize="14"
                     TextColor="White"
                     PlaceholderColor="#A0AEC0"
                     BackgroundColor="Transparent"
                     Margin="0,5"/>
                        </Frame>
                        <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="10">
                            <Entry Placeholder="Porta"
                     FontSize="14"
                     TextColor="White"
                     PlaceholderColor="#A0AEC0"
                     BackgroundColor="Transparent"
                     Margin="0,5"/>
                        </Frame>
                        <HorizontalStackLayout Spacing="10">
                            <Button Text="🔗 Conectar"
                      BackgroundColor="#38B2AC"
                      TextColor="White"
                      CornerRadius="10"
                      HorizontalOptions="FillAndExpand"
                      Clicked="CommonButtonClicked"
                      CommandParameter="connect"/>
                            <Button Text="❌ Desconectar"
                      BackgroundColor="#E53E3E"
                      TextColor="White"
                      CornerRadius="10"
                      HorizontalOptions="FillAndExpand"
                      Clicked="CommonButtonClicked"
                      CommandParameter="disconnect"/>
                        </HorizontalStackLayout>
                    </StackLayout>

                    <!-- Sobre -->
                    <StackLayout x:Name="AboutLayout" IsVisible="False" Spacing="20">
                        <Label Text="ℹ️ Sobre o Projeto"
                   FontSize="24"
                   TextColor="#E2E8F0"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
                        <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="20">
                            <Label Text="Este projeto monitora indicadores de saúde em tempo real, oferecendo insights baseados em IA. Desenvolvido para trazer bem-estar e inovação ao monitoramento corporal."
                     FontSize="14"
                     TextColor="#CBD5E0"
                     VerticalTextAlignment="Center"/>
                        </Frame>
                    </StackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Layout específico para Windows (WinUI) -->
        <Grid x:Name="WindowsLayout"
          IsVisible="{OnPlatform Android=false, WinUI=true}">
            <!-- Estrutura de duas colunas: Menu Lateral e Conteúdo Principal -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Menu Lateral -->
            <StackLayout Grid.Column="0" Padding="20" BackgroundColor="#2D3748" Spacing="15">
                <Label Text="📋 Menu"
               FontSize="24"
               TextColor="#E2E8F0"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>
                <VerticalStackLayout Spacing="10" HorizontalOptions="FillAndExpand">
                    <Button Text="📊 Monitoramento"
                  BackgroundColor="#4A5568"
                  TextColor="White"
                  FontSize="16"
                  CornerRadius="15"
                  HeightRequest="50"
                  Clicked="CommonButtonClicked"
                  CommandParameter="monitoring">
                        <Button.Triggers>
                            <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                <Setter Property="Scale" Value="0.9"/>
                            </Trigger>
                        </Button.Triggers>
                    </Button>
                    <Button Text="⚙️ Configurações"
                  BackgroundColor="#4A5568"
                  TextColor="White"
                  FontSize="16"
                  CornerRadius="15"
                  HeightRequest="50"
                  Clicked="CommonButtonClicked"
                  CommandParameter="settings">
                        <Button.Triggers>
                            <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                <Setter Property="Scale" Value="0.9"/>
                            </Trigger>
                        </Button.Triggers>
                    </Button>
                    <Button Text="ℹ️ Sobre"
                  BackgroundColor="#4A5568"
                  TextColor="White"
                  FontSize="16"
                  CornerRadius="15"
                  HeightRequest="50"
                  Clicked="CommonButtonClicked"
                  CommandParameter="about">
                        <Button.Triggers>
                            <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                <Setter Property="Scale" Value="0.9"/>
                            </Trigger>
                        </Button.Triggers>
                    </Button>

                </VerticalStackLayout>
            </StackLayout>

            <!-- Conteúdo Principal para Windows -->
            <ScrollView Grid.Column="1">
                <VerticalStackLayout Padding="30" Spacing="25">

                    <CollectionView x:Name="Lista"
Margin="10">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#2D3748"
             CornerRadius="10"
             Padding="10"
             Margin="5">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Name}"
                     FontSize="18"
                     TextColor="White"
                     FontAttributes="Bold"/>
                                        <Label Text="{Binding Gender}"
                     FontSize="14"
                     TextColor="#A0AEC0"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <!-- Monitoramento -->
                    <StackLayout x:Name="MonitoringLayoutWin" IsVisible="True" Spacing="20">
                        <Label Text="📊 Monitoramento da Saúde"
                   FontSize="28"
                   TextColor="#E2E8F0"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                            <!-- Frequência Cardíaca -->
                            <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="15" Margin="10,5">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="❤️ Frequência Cardíaca"
                         FontSize="18"
                         TextColor="#CBD5E0"/>
                                    <Label x:Name="HeartRateLabelWin"
                         Text="-- bpm"
                         FontSize="22"
                         TextColor="#38B2AC"
                         FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>
                            <!-- Temperatura Corporal -->
                            <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="15" Margin="10,5">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="🌡️ Temperatura Corporal"
                         FontSize="18"
                         TextColor="#CBD5E0"/>
                                    <Label x:Name="TemperatureLabelWin"
                         Text="--°C"
                         FontSize="22"
                         TextColor="#F56565"
                         FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>
                            <!-- Nível de Estresse -->
                            <Frame Grid.ColumnSpan="2" BackgroundColor="#2D3748" CornerRadius="15" Padding="15" Margin="10,5">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="🧠 Nível de Estresse"
                         FontSize="18"
                         TextColor="#CBD5E0"/>
                                    <Label x:Name="GSRLabelWin"
                         Text="--"
                         FontSize="22"
                         TextColor="#48BB78"
                         FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </StackLayout>

                    <!-- Configurações -->
                    <StackLayout x:Name="SettingsLayoutWin" IsVisible="False" Spacing="20">
                        <Label Text="⚙️ Configurações"
                   FontSize="28"
                   TextColor="#E2E8F0"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
                        <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="10">
                            <Entry Placeholder="Endereço IP"
                     FontSize="16"
                     TextColor="White"
                     PlaceholderColor="#A0AEC0"
                     BackgroundColor="Transparent"
                     Margin="0,5"/>
                        </Frame>
                        <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="10">
                            <Entry Placeholder="Porta"
                     FontSize="16"
                     TextColor="White"
                     PlaceholderColor="#A0AEC0"
                     BackgroundColor="Transparent"
                     Margin="0,5"/>
                        </Frame>
                        <HorizontalStackLayout Spacing="10">
                            <Button Text="🔗 Conectar"
                      BackgroundColor="#38B2AC"
                      TextColor="White"
                      CornerRadius="10"
                      HorizontalOptions="FillAndExpand"
                      Clicked="CommonButtonClicked"
                      CommandParameter="connect"/>
                            <Button Text="❌ Desconectar"
                      BackgroundColor="#E53E3E"
                      TextColor="White"
                      CornerRadius="10"
                      HorizontalOptions="FillAndExpand"
                      Clicked="CommonButtonClicked"
                      CommandParameter="disconnect"/>
                        </HorizontalStackLayout>
                    </StackLayout>

                    <!-- Sobre -->
                    <StackLayout x:Name="AboutLayoutWin" IsVisible="False" Spacing="20">
                        <Label Text="ℹ️ Sobre o Projeto"
                   FontSize="28"
                   TextColor="#E2E8F0"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
                        <Frame BackgroundColor="#2D3748" CornerRadius="15" Padding="20">
                            <Label Text="Este projeto monitora indicadores de saúde em tempo real, oferecendo insights baseados em IA. Desenvolvido para trazer bem-estar e inovação ao monitoramento corporal."
                     FontSize="16"
                     TextColor="#CBD5E0"
                     VerticalTextAlignment="Center"/>
                        </Frame>
                    </StackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Chat de IA (compartilhado em ambas as plataformas) -->
        <Frame x:Name="ChatFrame"
           IsVisible="False"
           BackgroundColor="#2D3748"
           CornerRadius="20"
           Padding="20"
           Margin="0,0,20,20"
           WidthRequest="320"
           HeightRequest="250"
           HorizontalOptions="End"
           VerticalOptions="End"
           TranslationY="50"
           Opacity="0">
            <VerticalStackLayout Spacing="15">
                <ScrollView HeightRequest="110">
                    <Label x:Name="ChatMessageLabel"
                 Text="Aguardando análise..."
                 FontSize="14"
                 TextColor="White"
                 VerticalOptions="StartAndExpand"/>
                </ScrollView>
                <HorizontalStackLayout Spacing="10">
                    <Entry x:Name="ChatEntry"
                 Placeholder="Digite sua mensagem..."
                 FontSize="14"
                 TextColor="White"
                 PlaceholderColor="#A0AEC0"
                 BackgroundColor="#1A202C"
                 HorizontalOptions="FillAndExpand"
                 WidthRequest="220"/>
                    <Button Text="➤"
                  FontSize="18"
                  BackgroundColor="#38B2AC"
                  TextColor="White"
                  WidthRequest="40"
                  HeightRequest="40"
                  CornerRadius="20"
                  BorderWidth="2"
                  BorderColor="#A5D6A7"
                  Clicked="CommonButtonClicked"
                  CommandParameter="sendChat">
                        <Button.Triggers>
                            <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                <Setter Property="Scale" Value="0.95"/>
                            </Trigger>
                        </Button.Triggers>
                    </Button>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!-- Botão Flutuante (compartilhado) -->
        <Frame BackgroundColor="#38B2AC"
           WidthRequest="60"
           HeightRequest="60"
           CornerRadius="30"
           Padding="0"
           HasShadow="True"
           HorizontalOptions="End"
           VerticalOptions="End"
           Margin="20">
            <Button Text="💬"
              FontSize="18"
              BackgroundColor="Transparent"
              TextColor="White"
              Clicked="CommonButtonClicked"
              CommandParameter="toggleChat">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
        </Frame>
    </Grid>
</ContentPage>
